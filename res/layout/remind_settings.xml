        </RelativeLayout>
        <ImageView android:id="@id/divider3" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" />
        <RelativeLayout android:orientation="horizontal" android:id="@id/remindFriendsLayout" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height">
            <TextView android:gravity="center_vertical" android:id="@id/remindFriendsText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_outter_setting_friends" android:layout_centerVertical="true" style="@style/SettingMainText" />
