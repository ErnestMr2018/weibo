        <ImageView android:id="@id/divider4" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" />
        <RelativeLayout android:orientation="horizontal" android:id="@id/remindSpAttentionLayout" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height">
