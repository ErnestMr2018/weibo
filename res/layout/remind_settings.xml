<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:scrollbars="none" android:fadingEdge="none" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:paddingTop="@dimen/settings_margin_top" android:paddingBottom="@dimen/settings_margin_top" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <RelativeLayout android:orientation="horizontal" android:id="@id/remindAtLayout" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height">
            <TextView android:gravity="center_vertical" android:id="@id/remindAtText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_outter_setting_at" android:layout_centerVertical="true" style="@style/SettingMainText" />
