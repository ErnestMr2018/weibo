        </RelativeLayout>
        <ImageView android:id="@id/divider2" android:layout_width="fill_parent" android:layout_height="wrap_content" android:scaleType="fitXY" />
        <RelativeLayout android:orientation="horizontal" android:id="@id/remindFansLayout" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height">
            <TextView android:gravity="center_vertical" android:id="@id/remindFansText" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_outter_setting_fans" android:layout_centerVertical="true" style="@style/SettingMainText" />
            <TextView android:id="@id/remindFansType" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pref_outter_setting_type_all" android:layout_alignParentRight="true" android:layout_centerVertical="true" style="@style/SettingSubText" />
        </RelativeLayout>
        <TextView android:gravity="left|center" android:id="@id/pushSettingsTitle" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/pref_outter_setting_sub_title" style="@style/SettingTitleText" />
        <RelativeLayout android:orientation="horizontal" android:id="@id/remindMessageLayout" android:layout_width="fill_parent" android:layout_height="@dimen/settings_item_height">
