            <TextView android:ellipsize="end" android:id="@id/innerSettingText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/pref_inner_setting_title" android:singleLine="true" android:layout_centerVertical="true" style="@style/SettingMainText" />
            <ImageView android:id="@id/innerSettingArrow" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="@dimen/settings_item_padding_right" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
